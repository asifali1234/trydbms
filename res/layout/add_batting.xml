<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/p_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="jersy "
        android:inputType="phone" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/runs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="runs"
        android:inputType="phone" />

    <EditText
        android:id="@+id/no_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="fours"
        android:inputType="phone" />
    
      <EditText
        android:id="@+id/no_six"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="sixs"
        android:ems="10"
        android:inputType="phone" />

      <Button
          android:id="@+id/add_batting"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="ADD" />

</LinearLayout>
